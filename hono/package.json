{
  "name": "hono",
  "scripts": {
    "build:webpack": "webpack --config webpack.config.js",
    "build:webpack:watch": "webpack --config webpack.config.js --watch",
    "dev": "concurrently \"npm run build:webpack:watch\" \"nodemon --watch src --watch static --ext ts,tsx,html,css,js --exec tsx src/index.tsx\"",
    "start": "tsx src/index.tsx",
    "test": "npm run test:unit",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:env:start": "../bash-scripts/start-test-env.sh",
    "test:env:stop": "../bash-scripts/stop-test-env.sh",
    "test:coverage": "vitest run --coverage",
    "test:all": "../bash-scripts/test-runner.sh",
    "test:all:quick": "npm run test:unit && npm run test:integration",
    "lint": "eslint src tests --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "compile:backend": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@gmx-io/sdk": "^1.1.1",
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.7.0",
    "@metamask/detect-provider": "^2.0.0",
    "@metamask/providers": "^22.1.0",
    "ethers": "^6.14.4",
    "hono": "^4.0.0",
    "json-with-bigint": "^3.4.4",
    "kysely": "^0.28.2",
    "pg": "^8.11.3",
    "puppeteer": "^24.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.1.8",
    "@types/supertest": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "happy-dom": "^12.0.0",
    "msw": "^2.0.0",
    "nodemon": "^3.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.5.3",
    "source-map-loader": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-loader": "^9.5.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
